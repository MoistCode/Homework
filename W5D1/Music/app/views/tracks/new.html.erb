<h1>Create A New Track</h1>

<form action="<%= tracks_url %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="track_title">Title:</label>
  <input id="track_title" type="text" name="track[title]" value="">
  <br>

  <label for="album_id">Album:</label>
  <select id="album_id" name="track[album_id]">
    <% Album.all.each do |album| %>
      <option value="<%= album.id %>"><%= album.title %></option>
    <% end %>
  </select>
  <br>

  <input type="submit" name="" value="Create Track">
</form>
